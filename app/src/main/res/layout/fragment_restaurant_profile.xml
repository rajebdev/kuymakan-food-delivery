<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLight">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorLight">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="@string/dummy_nama_penjual">
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/dummy_seller_image"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dummy_profile_phone"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="@color/colorTextDark"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/wijanarko_rajeb_gmail_com"
                    android:textSize="14sp"
                    android:textColor="@color/colorTextDark"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Admin"
                    android:textSize="14sp"
                    android:textColor="@color/colorTextDark"/>
            </LinearLayout>

            <Button
                android:id="@+id/btn_sign_out"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/border_red"
                android:textAlignment="center"
                android:text="Keluar"
                android:textAllCaps="false"
                android:textSize="12sp"
                android:textColor="#ff0033"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#888"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:padding="15dp"
            android:stretchColumns="*">

            <TableRow>
                <LinearLayout
                    android:id="@+id/btn_withdraw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="5dp">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:tint="@android:color/holo_red_light"
                        android:src="@drawable/ic_monetization_on_black_24dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/withdraw"
                        android:textSize="12sp"
                        android:textColor="@color/colorTextDark"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="5dp">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:tint="@android:color/holo_red_light"
                        android:src="@drawable/ic_format_list_bulleted_black_24dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/menu"
                        android:textSize="12sp"
                        android:textColor="@color/colorTextDark"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_stock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="5dp">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:tint="@android:color/holo_red_light"
                        android:src="@drawable/ic_remove_shopping_cart_black_24dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/out_of_stock"
                        android:textSize="12sp"
                        android:textColor="@color/colorTextDark"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_outlet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="5dp">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:tint="@android:color/holo_red_light"
                        android:src="@drawable/ic_store_black_24dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/my_outlet"
                        android:textSize="12sp"
                        android:textColor="@color/colorTextDark"/>

                </LinearLayout>
            </TableRow>

            <TableRow
                android:layout_marginTop="10dp">
                <LinearLayout
                    android:id="@+id/btn_help"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="5dp">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:tint="@android:color/holo_red_light"
                        android:src="@drawable/ic_help_outline_black_24dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/help"
                        android:textSize="12sp"
                        android:textColor="@color/colorTextDark"/>

                </LinearLayout>
            </TableRow>
        </TableLayout>

        <TextView
            android:id="@+id/btn_about_us"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-30dp"
            android:textColor="@android:color/holo_red_light"
            android:text="v 0.0.1-alpha"
            android:layout_gravity="center|bottom"
            android:textStyle="bold"/>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>